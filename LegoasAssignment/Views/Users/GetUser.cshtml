@model LegoasAssignment.Models.ViewModels.UpdateUserViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Legoas</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <style>
        .err {
            color: red;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LegoasAssignment</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <div class="col-md-6 offset-md-3">
        <h1>Update User</h1>
        <form method="post" asp-action="GetUser" class="mt-5">
            <div class="mb-3">
                <label for="Id" class="form-label">Id</label>
                <input type="text" class="form-control" asp-for="Id" readonly>
            </div>
            <div class="mb-3">
                <label for="Fullname" class="form-label">Fullname</label>
                <input type="text" class="form-control" asp-for="Fullname" placeholder="Enter Fullname">
                <div class="msg">
                    <span class="err" asp-validation-for="Fullname"></span>
                </div>
            </div>
            <div class="mb-3">
                <label for="Username" class="form-label">Username</label>
                <input type="text" class="form-control" asp-for="Username" placeholder="Enter Username">
                <div class="msg">
                    <span class="err" asp-validation-for="Username"></span>
                </div>

            </div>
            <div class="mb-3">
                <label for="Address" class="form-label">Address</label>
                <input type="text" class="form-control" asp-for="Address" placeholder="Enter Address">
            </div>
            <div class="mb-3">
                <label for="ZipCode" class="form-label">Zip Code</label>
                <input type="text" class="form-control" asp-for="ZipCode" placeholder="Enter Zip Code">
            </div>
            <div class="mb-3">
                <label for="Province" class="form-label">Province</label>
                <input type="text" class="form-control" asp-for="Province" placeholder="Enter Province">
            </div>
            @*<div class="mb-3">
            <label class="form-label">Select Branch</label>
            <select class="form-select" asp-items="Model.BranchesSelectList"></select>
            </div>*@
            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input type="password" class="form-control" asp-for="Password" placeholder="Enter Password">
                <div class="msg">
                    <span asp-validation-for="Password" class="err"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="err">@TempData["msg"]</div>
                }
            </div>
            <div class="mb-3">
                <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Re-enter Password">
                <div class="msg">
                    <span asp-validation-for="ConfirmPassword" class="err"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="err">@TempData["msg"]</div>
                }
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
            <a class="btn btn-secondary" href="/Users/GetUsers">Back</a>
        </form>
    </div>
</body>
</html>